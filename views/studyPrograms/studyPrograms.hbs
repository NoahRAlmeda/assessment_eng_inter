<script>

    //RELOAD PAGE WHEN USER CLICK BACK BUTTON
window.addEventListener("pageshow", function (event) {
    var historyTraversal = event.persisted ||
        (typeof window.performance != "undefined" &&
            window.performance.navigation.type === 2);
    if (historyTraversal) {
        // Handle page restore.
        window.location.reload();
    }
});
</script>

<div class="container-fluid">
  <form action="studyPrograms" method="POST">
    <h2>Study Programs</h2>
    <hr class="my-4">
    <div class = "row">
    <div class = "col-lg-2"><a href="{{create}}" class="btn btn-success" role="button">Create New</a></div>
    <div class = "col-lg-4"><select class="form-control" name = "dep_ID">
      <option value="{{current_depID}}">{{current_depName}}</option>
      {{#each resultsDD}}
      <option value="{{this.dep_ID}}">{{this.dep_name}}</option>
      {{/each}}
    </select>
    </div>
    <button class="btn btn-primary" role="button">Filter</button>
    </div>

        <hr class="my-1">
        <div class="row">
            <div class="col"><strong>Name</strong></div>
            <div class="col"><strong>Study Program ID</strong></div>
            <div class="col"><strong>Description</strong></div>
            <div class="col"><strong>Department ID</strong></div>
            <div class="col"><strong>Date Created</strong></div>
            <div class="col"></div>
        </div>
        <hr class="my-1">
        {{#each results}}
        <div class="row">
            <div class="col">{{this.prog_name}}</div>
            <div class="col">{{this.prog_ID}}</div>
            <div class="col">Science Study Program Description</div>
            <div class="col">{{this.dep_ID}}</div>
            <div class="col">{{this.date_created}}</div>
            <div class="col">
                <a href="/studyPrograms/{{this.prog_ID}}/edit" type="submit" class="btn btn-warning" style="color:#FFFFFF"
                    name="editButton">Edit</a>
                <a href="/studyPrograms/{{this.prog_ID}}/remove" type="submit" class="btn btn-danger">Delete</a>
            </div>
        </div>
        {{/each}}
    </form>
    <hr class="mt-5 mb-3">
    <p>&copy; 2019 - Universidad Interamericana Puerto Rico Bayam&oacute;n Campus</p>


</div>
