<div class="container-fluid">
    <h1>Edit</h1>
    <h4>Outcome</h4>
    <hr class="my-4">

    <form action="/outcomes/{{results.outc_ID}}?_method=PUT" method="POST">
        <div class="row">
            <div class="col-2 align-self-center text-right"><strong>Name</strong></div>
            <div class="col-8"><input class="form-control" value="{{results.outc_name}}" name="data[name]" type="text"
                    placeholder="Outcome Name" required></div>
        </div>
        <div class="row my-4">
            <div class="col-2 align-self-center text-right"><strong>Description</strong></div>
            <div class="col-8"><input class="form-control" value="{{results.outc_description}}" name="data[desc]"
                    type="text" placeholder="Outcome Description" required>
            </div>
        </div>
        <div class="row">
            <div class="col-2 align-self-center text-right"><strong>Study Program</strong></div>
            <select type="text" name="data[std_prg]" required>
                {{#each std_prog}}
                <option class="dropdown-item" value="{{prog_ID}}">{{prog_name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="row my-4">
            <div class="col-2"></div>
            <div class="col"><button type="submit" class="btn btn-outline-secondary">Save</button></div>
        </div>
    </form>

    <hr class="my-3">
    <p>&copy; 2019 - Universidad Interamericana Puerto Rico Bayam&oacute;n Campus</p>
</div>
