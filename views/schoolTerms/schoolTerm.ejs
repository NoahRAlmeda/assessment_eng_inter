  <!-- Table -->
  <div class="row p-2 bg-secondary text-light">
    <!-- {{!-- <form action="{{create}}" method="post"> --}} -->
    <div class="col-10"><strong>Term Name</strong></div>
    <div class="col"></div>
  </div>
  <% for (var elem of results) {%>
  <div class="row btn-light py-2">
    <div class="col-10"><%= elem.term_name %></div>
    <div class="col dropdown">
      <button class="btn inter-green inter-green-btn dropdown-toggle" data-toggle="dropdown">
