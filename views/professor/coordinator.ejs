<%- include ('../admin/partials/header') -%>


<div class="container-fluid">
    <table id="table" class="table table-fixed table-hover table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Professor</th>
                <th>Assessment</th>
                <th>Course</th>
                <th>Outcome</th>
                <th>Term</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody id="filter">

            <% if (assessments.length > 0) { %>
            <% var counter = 1; %>

                <!-- ASSESSMENT IN PROSESS -->
                <%- include ('./modal/coordinator_table', {assessments: assessment_in_progress}) -%>

                <!-- ASSESSMET COMPLETED -->
                <%- include ('./modal/coordinator_table', {assessments: assessment_completed}) -%>

                <!-- ASSESSMENT ARCHIVE -->
                <%- include ('./modal/coordinator_table', {assessments: assessment_archive}) -%>
                
            <% } %>
        </tbody>
    </table>
</div>

<style>
    .container-fluid {
        margin-top: 2%;
        height: 500px;
        overflow-y: scroll;
        width: 99%;
    }

    tr,
    th {
        text-align: center;
    }

    /* # COLUM */
    th:first-child,
    td:first-child {
        width: 2%;
        text-align: center;
    }

    /* PROFESSOR NAME COLUM */
    th:nth-child(2),
    td:nth-child(2) {
        width: 15%;
    }

    /* ASSESSMENT NAME */
    th:nth-child(3),
    td:nth-child(3) {
        width: 12%;
    }

    /* COURSE */
    th:nth-child(4),
    td:nth-child(4) {
        width: 20%;
    }

    /* OUTCOME */
    th:nth-child(5),
    td:nth-child(5) {
        width: 10%;
    }

    /* TERM */
    th:nth-child(6),
    td:nth-child(6) {
        width: 18%;
    }

    /* TERM */
    th:nth-child(7),
    td:nth-child(7) {
        width: 13%;
        text-align: center;
    }

    th:nth-child(8),
    td:nth-child(8) {
        width: 10%;
        text-align: center;
    }

    .interID{
        font-style: italic;
        font-size: 0.8em;
    }

    td {
        text-align: left;
    }

    .status {
        color: white;
        font-weight: bold;
    }
    .in_progress {
        background-color: #d39e00;
    }
    .completed {
        background-color: #28a745;
    }
    .archive {
        background-color: #6c757d;
    }
</style>

<script>
    $(document).ready(function(){
        $("tr td:first-child").each(function(index, value){
            $(this).text((index+1));
            console.log(index);
        });
    });
</script>


