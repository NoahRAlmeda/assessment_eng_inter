                    <!-- <i class="editBtn fa fa-pencil-square-o">
                        <input type="hidden" name="id" value="<%=assessment_archive[i].assessment_ID%>">
                        <input type="hidden" name="name" value="<%=assessment_archive[i].name%>">
                        <input type="hidden" name="department" value="<%=assessment_archive[i].dep_ID%>">
                        <input type="hidden" name="studyprogram" value="<%=assessment_archive[i].prog_ID%>">
