<div class="wrapper">
  <div class="container">
    <form action="edit?_method=PUT" method="POST">
    <div class="row">
      <h1>Evaluation Rubric</h1>
      <div class="col-sm-12">
        <form>
          <div class="row">
            <div class="col-sm-2">
              <label>Name</label>
            </div>
            <div class="col-sm-10">
              <input class="form-control" type="text" placeholder="Rubric Name" value="{{rubric_name}}" name="rubric_name" required>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <label>Description</label>
            </div>
            <div class="col-sm-10">
              <input class="form-control" type="text" placeholder="Rubric Description" value="{{rubric_description}}" name="rubric_description" required>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-2">
              <label>Student Outcome</label>
            </div>
            <div class="col-sm-10">
              <select class="form-control" name="outc_ID" required>
                {{#each outc_ID}}
                <option>{{this.outc_ID}}</option>
                {{/each}}
              </select>
            </div>
          </div>
          <div class="row">
            <!-- <div class="col-sm-2">
              <label>Date Created</label>
            </div>
            <div class="col-sm-10">
              <input class="form-control" type="text" placeholder="Date Created">
            </div> -->
          </div>
        </form>
      </div>
        <button id="createModalbtn" role="button" class="btn">Save</button>
      </div>
    </div>
  </div>
</div>
