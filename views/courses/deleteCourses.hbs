<div class = "container">
  <h1>Delete Course</h1>
  <hr>
  <!-- Green Create New Button -->
  <button type="button" class="btn btn-success">Create New</button>
  <!-- Middle line -->
  <h3>Are you sure you want to delete this?</h3>
  <h5>Course</h5>
  <hr>
  <!-- First row that will contain the table header -->
  <form action="/courses/{{course_ID}}?_method=DELETE" method="POST">

  <div class = "row">
          <div class = "col-lg-4 label"><strong>Name</strong></div>
          <div class = "col-lg-8">{{course_name}}</div>
  </div>
  <div class = "row">
          <div class = "col-lg-4 label"><strong>Number</strong></div>
          <div class = "col-lg-8">{{course_number}}</div>
  </div>
  <div class = "row">
          <div class = "col-lg-4 label"><strong>Date Created</strong></div>
          <div class = "col-lg-8">{{date_created}}</div>
  </div>
  <div class = "row">
      <div class = "col-lg-4"><button type="submit" class="btn btn-outline-secondary">Delete</button>
        <a href="{{base_url}}"> Back to List</a></div>
  </div>
</form>
</div>
